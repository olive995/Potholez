<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <Button
        android:id="@+id/reportButton"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="194dp"
        android:layout_height="68dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="25dp"
        android:background="#00000000"
        android:text="@string/report_pothole"


        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#050400"
        android:textColorHighlight="#15231b"
        android:textColorHint="#15231b"
        android:textColorLink="#15231b"
        android:textSize="24sp"
        android:visibility="visible" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="olive995.github.com.potholez.PotholeLocatorActivity" />
</FrameLayout>
